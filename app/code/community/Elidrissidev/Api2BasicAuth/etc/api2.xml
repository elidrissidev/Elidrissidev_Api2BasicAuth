<config>
    <api2>
        <!-- Add support for REST Users to the default Rest resources -->
        <resources>
            <product>
                <privileges>
                    <restuser>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </restuser>
                </privileges>
                <restuser>
                    <read>
                        <allow_open_amount>1</allow_open_amount>
                        <giftcard_amounts>1</giftcard_amounts>
                        <open_amount_min>1</open_amount_min>
                        <open_amount_max>1</open_amount_max>
                        <image>1</image>
                        <is_recurring>1</is_recurring>
                        <gallery>1</gallery>
                        <media_gallery>1</media_gallery>
                        <price_view>1</price_view>
                        <small_image>1</small_image>
                        <image_url>1</image_url>
                        <is_saleable>1</is_saleable>
                        <total_reviews_count>1</total_reviews_count>
                        <url>1</url>
                        <buy_now_url>1</buy_now_url>
                        <has_custom_options>1</has_custom_options>
                        <is_in_stock>1</is_in_stock>
                        <regular_price_with_tax>1</regular_price_with_tax>
                        <regular_price_without_tax>1</regular_price_without_tax>
                        <final_price_with_tax>1</final_price_with_tax>
                        <final_price_without_tax>1</final_price_without_tax>
                        <recurring_profile>1</recurring_profile>
                        <thumbnail>1</thumbnail>
                        <url_key_create_redirect>1</url_key_create_redirect>
                    </read>
                    <write>
                        <allow_open_amount>1</allow_open_amount>
                        <giftcard_amounts>1</giftcard_amounts>
                        <open_amount_min>1</open_amount_min>
                        <open_amount_max>1</open_amount_max>
                        <image>1</image>
                        <is_recurring>1</is_recurring>
                        <gallery>1</gallery>
                        <media_gallery>1</media_gallery>
                        <price_view>1</price_view>
                        <small_image>1</small_image>
                        <image_url>1</image_url>
                        <is_saleable>1</is_saleable>
                        <total_reviews_count>1</total_reviews_count>
                        <url>1</url>
                        <buy_now_url>1</buy_now_url>
                        <has_custom_options>1</has_custom_options>
                        <is_in_stock>1</is_in_stock>
                        <regular_price_with_tax>1</regular_price_with_tax>
                        <regular_price_without_tax>1</regular_price_without_tax>
                        <final_price_with_tax>1</final_price_with_tax>
                        <final_price_without_tax>1</final_price_without_tax>
                        <recurring_profile>1</recurring_profile>
                        <thumbnail>1</thumbnail>
                        <entity_id>1</entity_id>
                        <created_at>1</created_at>
                        <updated_at>1</updated_at>
                    </write>
                </restuser>
            </product>
            <product_category>
                <privileges>
                    <restuser>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <delete>1</delete>
                    </restuser>
                </privileges>
                <exclude_attributes>
                    <restuser>
                        <write>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                        </write>
                    </restuser>
                </exclude_attributes>
            </product_category>
            <product_image>
                <privileges>
                    <restuser>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </restuser>
                </privileges>
                <exclude_attributes>
                    <restuser>
                        <read>
                            <file_name>1</file_name>
                            <file_content>1</file_content>
                            <file_mime_type>1/</file_mime_type>
                        </read>
                        <write>
                            <id>1</id>
                            <url>1</url>
                        </write>
                    </restuser>
                </exclude_attributes>
            </product_image>
            <product_website>
                <privileges>
                    <restuser>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <delete>1</delete>
                    </restuser>
                </privileges>
                <force_attributes>
                    <restuser>
                        <website_id>1</website_id>
                        <copy_to_stores>1</copy_to_stores>
                    </restuser>
                </force_attributes>
            </product_website>
            <customer>
                <privileges>
                    <restuser>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </restuser>
                </privileges>
                <exclude_attributes>
                    <restuser>
                        <write>
                            <entity_id>1</entity_id>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                            <created_in>1</created_in>
                            <last_logged_in>1</last_logged_in>
                        </write>
                    </restuser>
                </exclude_attributes>
            </customer>
            <customer_address>
                <privileges>
                    <restuser>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </restuser>
                </privileges>
                <exclude_attributes>
                    <restuser>
                        <read>
                            <region_id>1</region_id>
                            <vat_is_valid>1</vat_is_valid>
                            <vat_request_date>1</vat_request_date>
                            <vat_request_id>1</vat_request_id>
                            <vat_request_success>1</vat_request_success>
                        </read>
                        <write>
                            <entity_id>1</entity_id>
                            <region_id>1</region_id>
                            <vat_is_valid>1</vat_is_valid>
                            <vat_request_date>1</vat_request_date>
                            <vat_request_id>1</vat_request_id>
                            <vat_request_success>1</vat_request_success>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                        </write>
                    </restuser>
                </exclude_attributes>
            </customer_address>
            <order>
                <privileges>
                    <restuser>
                        <retrieve>1</retrieve>
                    </restuser>
                </privileges>
                <exclude_attributes>
                    <restuser>
                        <write>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                        </write>
                    </restuser>
                </exclude_attributes>
                <force_attributes>
                    <restuser>
                        <payment_method>1</payment_method>
                        <addresses>1</addresses>
                        <order_items>1</order_items>
                        <gift_message_from>1</gift_message_from>
                        <gift_message_to>1</gift_message_to>
                        <gift_message_body>1</gift_message_body>
                        <order_comments>1</order_comments>
                        <tax_name>1</tax_name>
                        <tax_rate>1</tax_rate>
                    </restuser>
                </force_attributes>
            </order>
            <order_item>
                <privileges>
                    <restuser>
                        <retrieve>1</retrieve>
                    </restuser>
                </privileges>
                <excluded_attributes>
                    <restuser>
                        <write>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                        </write>
                    </restuser>
                </excluded_attributes>
            </order_item>
            <order_address>
                <privileges>
                    <restuser>
                        <retrieve>1</retrieve>
                    </restuser>
                </privileges>
                <excluded_attributes>
                    <restuser>
                        <write>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                        </write>
                    </restuser>
                </excluded_attributes>
            </order_address>
            <order_comment>
                <privileges>
                    <restuser>
                        <retrieve>1</retrieve>
                    </restuser>
                </privileges>
                <force_attributes>
                    <restuser>
                        <created_at>1</created_at>
                        <comment>1</comment>
                        <is_customer_notified>1</is_customer_notified>
                        <is_visible_on_front>1</is_visible_on_front>
                        <status>1</status>
                    </restuser>
                </force_attributes>
            </order_comment>
            <stock_item>
                <privileges>
                    <restuser>
                        <retrieve>1</retrieve>
                        <update>1</update>
                    </restuser>
                </privileges>
                <exclude_attributes>
                    <restuser>
                        <write>
                            <item_id>1</item_id>
                            <product_id>1</product_id>
                            <stock_id>1</stock_id>
                            <low_stock_date>1</low_stock_date>
                            <created_at>1</created_at>
                            <updated_at>1</updated_at>
                        </write>
                    </restuser>
                </exclude_attributes>
                <force_attributes>
                    <restuser>
                        <item_id>1</item_id>
                    </restuser>
                </force_attributes>
            </stock_item>
        </resources>
    </api2>
</config>
